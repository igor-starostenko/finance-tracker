<div id="stock-lookup">
    <h3>Search for Stocks</h3>
    <%= form_tag search_stocks_path, remote: true, method: :get, id: 'stock-lookup-form' do %>
        <div id="search" class="form-group row no-padding text-center col-md-12">
            <div class="col-md-9">
                <%= text_field_tag :stock, params[:stock], placeholder: 'Stock Ticker Symbol',
                                    autofocus: true, class: 'form-control search-box input-lg' %>
            </div>
            <div class="col-md-2">
                <%= button_tag(type: :submit, class: 'btn btn-lg btn-success') do %>
                    <i class='fa fa-search'></i> Look up a stock
                <% end %>
            </div>
        </div>
    <% end %>
    <div id="search-results" class="well results-block">
        <%= render 'common/spinner' %>
        <% if @stock %>
            <div id="stock-lookup-results">
                <strong>Symbol:</strong> <%= @stock.ticker %>
                <strong>Name:</strong> <%= @stock.name %>
                <strong>Price:</strong> <%= @stock.price %>
            </div>
        <% end %>
        <div id="stock-lookup-errors"></div>
    </div>
</div>
